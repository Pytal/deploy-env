{
  "extends": [
    "config:base"
  ],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "depTypeList": ["peerDependencies"],
      "rangeStrategy": "replace"
    }
  ],
  "prCreation": "not-pending",
  "labels": ["dependencies"]
}
